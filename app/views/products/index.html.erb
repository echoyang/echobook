<h1>yikeshu</h1>

<div class="row">
  <% @products.each do |p| %>
    <div class="col-md-3 col-xs-6">
      <%= link_to p do %>
                <% if p.image.present? %>
                      <%= image_tag p.image.thumb.url, class: "thumbnail" %>
                <% else %>
                      <%= image_tag "http://placehold.it/200x200&text=No Pic", class: "thumbnail" %>
                <% end %>
      <% end %>
      <%= p.title %> $ <%= p.price %>
    </div>
  <% end %>
</div>
