<h2>编辑商品</h2>

<%= simple_form_for [:admin, @product] do |f| %>

    <div class="group">
      <%= f.input :title %>
    </div>

    <div class="group">
      <%= f.input :author %>
    </div>

    <div class="group">
      <%= f.input :description %>
    </div>

    <div class="group">
      <%= f.input :quantity %>
    </div>

    <div class="group">
      <%= f.input :price %>
    </div>

    <% if @product.image.present? %>
        <span>现在的图片 </span>
        <%= image_tag @product.image.thumb.url, class: "thumbnail" %>
    <% end %>

    <div class="group">
      <%= f.input :image, as: :file %>
    </div>

    <%= f.submit "Submit", data: { disable_with: "Submiting..."} %>
<% end %>
